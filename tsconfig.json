{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"removeComments": false,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2017",
		"skipLibCheck": true,
		"sourceMap": false,
		"outDir": "./dist"
	},
	"include": [
		"src/**/*",
		"src/*.spec.ts"
	],
	"exclude": [
		"node_modules"
	]
}
